/******************************************************************************

write a program to sort six number and find largest one by using ladder of if-else..

*******************************************************************************/
#include <stdio.h>

int main()
{
    int a,b,c,d,e,f;
    printf("\nEnter 1st number");
    scanf("%d::",&a);
    printf("\nEnter 2st number");
    scanf("%d::",&b);
    printf("\nEnter 3st number");
    scanf("%d::",&c);
    printf("\nEnter 4st number");
    scanf("%d::",&d);
    printf("\nEnter 5st number");
    scanf("%d::",&e);
    printf("\nEnter 6st number");
    scanf("%d::",&f);
    if((a>b) && (a>c) && (a>d) && (a>e) && (a>f))
    printf("\nLARGEST SIX NUMBER :%d",a);
    else if( (b>c) && (b>d) && (b>e) && (b>f))
    printf("\nLARGEST SIX NUMBER: %d",b);
    else if((c>d) && (c>e) && (c>f))
    printf("\n LARGEST SIX NUMBER: %d",c);
    else if((d>e) && (d>f))
    printf("\n  LARGEST SIX NUMBER :%d",d);
    else if(e>f)
    printf("\n  LARGEST SIX NUMBER: %d",e);
    else
    printf("\n  LARGEST SIX NUMBER: %d",f);
    
    
    return 0;
}




