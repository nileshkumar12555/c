/******************************************************************************

write a program to display the number ascendind and (1 to 10 ) and descending (10 to 1) orders

*******************************************************************************/
#include <stdio.h>

int main()
{
  int i=0;
  printf("number in ascending order : ");
  for(;i-->1;)
  printf("%5d ::",i);
  printf("\n\n");
  printf("number in descending order : ");
  for(;i-->1;)
  printf("%3d ::",i);
    return 0;
}

