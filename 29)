/******************************************************************************

ENTER THE NUMBER:6
  1
  2  1
  3  2  1
  4  3  2  1
  5  4  3  2  1
  6  5  4  3  2  1
  6  5  4  3  2  1
  5  4  3  2  1
  4  3  2  1
  3  2  1
  2  1
  1
*******************************************************************************/
#include <stdio.h>

int main()
{
  int i,j,x;
  printf("ENTER THE NUMBER:");
  scanf("%d",&x);
  for(i=1;i<=x;i++)
  {

    for(j=i;j>=1;j--)
    {
        printf("%3d",j);
    }
    printf("\n");
  }
  for(i=x;i>=1;i--)
  {
      for(j=i;j>=1;j--)
      {
          printf("%3d",j);

      }
      printf("\n");
  }

    return 0;
}

